{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_details'|trans({'%id%': artist.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_details'|trans({'%id%': artist.id|default('')}) }}</h1>
    {% if artist is defined and artist|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ artist.id }}</dd>
            <dt>{{ 'label.name'|trans }}</dt>
            <dd>{{ artist.name }}</dd>
            <dt>{{ 'label.dateOfBirth'|trans }}</dt>
            <dd>{{ artist.dateOfBirth|format_date('long') }}</dd>
            <dt>{{ 'label.dateOfDeath'|trans }}</dt>
            <dd>{{ artist.dateOfDeath|format_date('long') }}</dd>
        </dl>
        <p>
            <a href="{{ url('artist_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}