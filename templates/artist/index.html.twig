{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list_artist'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_list_artist'|trans }}</h1>
    {%  if pagination is defined and pagination.items|length %}
{#            <a class="btn btn-primary btn-lg" role="button" href="{{ url('artist_create') }}" title="{{ 'action.create'|trans }}">#}
{#                {{ 'action.create'|trans }}#}
{#            </a>#}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'artist.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'artist.name') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for artist in pagination.items %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ url('artist_show', {id: artist.id}) }}" title="{{ 'action.view'|trans }}">
                                {{ 'action.view'|trans }}
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ url('artist_edit', {id: artist.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('artist_delete', {id: artist.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
{% else %}
<p>
    {{ 'message.empty_list'|trans }}
</p>
{% endif %}
{% endblock %}