<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
                rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ url('app_index') }}">{{ 'title.app'|trans }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('input_index') }}">{{ 'title.record_list_input'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('artist_index') }}">{{ 'title.record_list_artist'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('category_index') }}">{{ 'title.record_list_category'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">{{ 'label.idea'|trans }}</a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item" id="btn-nav">
                        <a class="btn btn-primary" role="button" href="{{ url('input_create') }}" title="{{ 'action.create'|trans }}">
                            {{ 'action.create'|trans }}
                        </a>
                    </li>
                    <li class="nav-item" id="btn-nav">
                        <a class="btn btn-primary" role="button" href="{{ url('user_show', {id: app.user.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.account'|trans }}
                        </a>
                    </li>
                    <li class="nav-item" id="btn-nav">
                        <a class="btn btn-outline-primary" href="{{ url('app_logout') }}" role="button">{{ 'action.logout'|trans }}</a>
                    </li>
                {% else %}
                    <li class="nav-item" id="btn-nav">
                        <a class="btn btn-primary" href="{{ url('app_register') }}" role="button">{{ 'action.register'|trans }}</a>
                    </li>
                    <li class="nav-item" id="btn-nav">
                        <a class="btn btn-outline-primary" href="{{ url('app_login') }}" role="button">{{ 'action.login'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>
