{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_details'|trans({'%id%': movement.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_details'|trans({'%id%': movement.id|default('')}) }}</h1>
    {% if movement is defined and movement|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ movement.id }}</dd>
            <dt>{{ 'label.movement'|trans }}</dt>
            <dd>{{ movement.name }}</dd>
        </dl>
        <p>
            <a href="{{ url('movement_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}