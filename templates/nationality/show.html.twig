{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_details_nationality'|trans({'%id%': nationality.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_details_nationality'|trans({'%id%': nationality.id|default('')}) }}</h1>
    {% if nationality is defined and nationality|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ nationality.id }}</dd>
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ nationality.name }}</dd>
        </dl>
        <p>
            <a href="{{ url('nationality_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}