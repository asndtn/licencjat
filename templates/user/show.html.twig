{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_details_user'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_details_user'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.user'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dd><a href="{{ url('user_edit', {id: app.user.id}) }}" title="{{ 'action.edit'|trans }}">
                    {{ 'action.edit'|trans }}
                </a></dd>
        </dl>
        <p>
            <a href="{{ url('input_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}