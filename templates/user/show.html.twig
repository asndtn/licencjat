{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.account'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.account'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dd><a href="{{ url('user_edit', {id: app.user.id}) }}" title="{{ 'action.edit'|trans }}">
                    {{ 'action.edit'|trans }}
                </a></dd>
        </dl>
        <a href="{{ url('my_inputs') }}" title="{{ 'label.my_inputs'|trans }}">{{ 'label.my_inputs' }}</a>
        <a href="{{ url('app_change-password', {id: app.user.id}) }}" title="{{ 'action.password_change'|trans }}">{{ 'action.password_change' }}</a>
{#        <p>#}
{#            <a href="{{ url('input_index') }}" title="{{ 'action.back_to_list'|trans }}">#}
{#                {{ 'action.back_to_list'|trans }}#}
{#            </a>#}
{#        </p>#}
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}