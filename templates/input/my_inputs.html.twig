{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list_input'|trans }}
{% endblock %}

{% block body %}
    {%  if pagination is defined and pagination.items|length %}
        <div class="d-flex justify-content-center">
            {% for input in pagination.items %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" id="input-card" src="{{ asset(paintings_directory~input.paintingFilename) }}"
                         alt="{{ input.artist.name }}">
                    <div class="card-body" id="input-card-body">
                        <a id="titlelink" href="{{ url('input_show', {id: input.id}) }}" title="{{ 'action.view'|trans }}"><h5 class="card-title">{{ input.artist.name }}</h5></a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="d-flex justify-content-center" id="show">
            <div class="row col-10 text-center">
                <div class="row">
                    <h3 class="h3 font-weigh-normal">
                        {{ 'message.your_empty_list'|trans }}
                    </h3>
                </div>
                <div class="row">
                    <h4 class="h4 font-weigh-normal">
                        <a role="button" class="btn btn-secondary btn-lg" href="{{ url('input_create') }}" title="{{ 'message.add'|trans }}">{{ 'message.add'|trans }}</a>
                    </h4>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}