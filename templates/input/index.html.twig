{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.input_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.input_list'|trans }}</h1>
    {%  if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'input.id') }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'input.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.description'|trans, 'input.description') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for input in pagination.items %}
            <tr>
                <td>{{ input.id }}</td>
                <td>{{ input.category.name }}</td>
                <td>{{ input.title }}</td>
                <td>{{ input.description }}</td>
                <td>
                    <a href="{{ url('input_show', {id: input.id}) }}" title="{{ 'action.view'|trans }}">
                        {{ 'action.view'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
{% else %}
<p>
    {{ 'message.empty_list'|trans }}
</p>
{% endif %}
{% endblock %}