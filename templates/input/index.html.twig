{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list_input'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_list_input'|trans }}</h1>
    {%  if pagination is defined and pagination.items|length %}
        {% for input in pagination.items %}
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="{{ asset(paintings_directory~input.paintingFilename) }}"
                             alt="{{ input.artist.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ input.title }}</h5>
                                                {# <p class="card-text"><a href="{{ url('input_index', {'filters.category_id' : input.category.id}) }}" title="{{ input.category.name }}">{{ input.category.name }}</a></p> #}
                            <a href="{{ url('input_show', {id: input.id}) }}" title="{{ 'action.view'|trans }}"
                               class="btn btn-primary">
                                {{ 'action.view'|trans }}
                            </a>
                        </div>
                    </div>
        {% endfor %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
{% else %}
<p>
    {{ 'message.empty_list'|trans }}
</p>
{% endif %}
{% endblock %}