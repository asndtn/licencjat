{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list_field'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_list_field'|trans }}</h1>
    {%  if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

            <a class="btn btn-primary btn-lg" role="button" href="{{ url('field_create') }}" title="{{ 'action.create'|trans }}">
                {{ 'action.create'|trans }}
            </a>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'field.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.field'|trans, 'field.name') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for field in pagination.items %}
            <tr>
                <td>{{ field.id }}</td>
                <td>{{ field.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ url('field_show', {id: field.id}) }}" title="{{ 'action.view'|trans }}">
                                {{ 'action.view'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('field_edit', {id: field.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('field_delete', {id: field.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
{% else %}
<p>
    {{ 'message.empty_list'|trans }}
</p>
{% endif %}
{% endblock %}