{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list_tag'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_list_tag'|trans }}</h1>
    {%  if pagination is defined and pagination.items|length %}

{#            <a class="btn btn-primary btn-lg" role="button" href="{{ url('tag_create') }}" title="{{ 'action.create'|trans }}">#}
{#                {{ 'action.create'|trans }}#}
{#            </a>#}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'tag.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.tag'|trans, 'tag.name') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in pagination.items %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ url('tag_show', {id: tag.id}) }}" title="{{ 'action.view'|trans }}">
                                {{ 'action.view'|trans }}
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ url('tag_edit', {id: tag.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('tag_delete', {id: tag.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <!-- Pagination -->
        <div class="navigation text-center d-flex justify-content-center">
            {{ knp_pagination_render(pagination, 'pagination.html.twig') }}
        </div>
{% else %}
<p>
    {{ 'message.empty_list'|trans }}
</p>
{% endif %}
{% endblock %}